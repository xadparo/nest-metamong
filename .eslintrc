{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["error", "never"],
        "require-jsdoc": "off",
        "object-curly-spacing": ["error", "always"],
        "indent": ["error", 2],
        "guard-for-in": "off",
        "max-len": "off",
        "new-cap": "off",
        "linebreak-style": ["error", "unix"]
    }
}
